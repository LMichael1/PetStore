@model IEnumerable<Product>
@{
    ViewBag.Title = "Все товары";
    Layout = "_AdminLayout";
}

<div class="card mt-2">
    <div class="card-body">
        <h3 class="card-title">Все товары</h3>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th class="text-right">ID</th>
                    <th>Название</th>
                    <th class="text-right">Цена</th>
                    <th class="text-center">Действия</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.ID</td>
                    <td>@item.Name</td>
                    <td class="text-right">@item.Price.ToString("c")</td>
                    <td style="width:15%" class="text-center">
                        <form asp-action="Delete" method="post">
                            <a asp-action="Edit" class="btn btn-sm btn-warning rounded-pill"
                               asp-route-productId="@item.ID">
                                Редактировать
                            </a>
                            @if (User.IsInRole("Admin"))
                            {
                                <input type="hidden" name="ProductID" value="@item.ID" />
                                <button type="submit" class="btn btn-danger btn-sm rounded-pill">
                                    Удалить
                                </button>
                            }
                        </form>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
<br />
<div class="text-center">
    <a asp-action="Create" class="btn btn-primary btn-transparent">Добавить продукт</a>
</div>
<br />
